@model com.cpp.calypso.proyecto.aplicacion.AvanceProcuraDto

@{
    ViewBag.Title = "Create";
}

@if (ViewBag.Msg != null)
{

    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-xs-12 col-md-8">
            <div class="alert alert-danger" role="alert">
                <div class="row">


                    <div class="col-sm-11 align-middle">
                        @ViewBag.Msg
                    </div>

                </div>
            </div>

        </div>
    </div>
}

@section page_title {<i class="fa fa-unlock-alt"></i> Avance de Procura}
<div class="row">
<div class="col-md-2"></div>
<div class="col-xs-12 col-md-8">
        

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Información Avance Procura</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.OfertaId, new { htmlAttributes = new { @class = "form-control" } })
    @Html.HiddenFor(model => model.vigente)
    @Html.HiddenFor(model => model.CertificadoId)

    
    <div class="row">
        <div class="col-xs-12 col">
            <h6><b>Proyecto: </b>@Model.Oferta.Proyecto.codigo </h6>
            <h6><b>Descripción:</b>@Model.Oferta.Proyecto.descripcion_proyecto </h6>

        </div>

        <div class="col-xs-12 col">
            <h6><b>Oferta: </b> @Model.Oferta.codigo</h6>
            <h6><b>Descripción:</b> @Model.Oferta.descripcion</h6>

        </div>
    </div>
  
    <div class="row">
        <div class="col">
            <div class="form-group">
                @Html.LabelFor(model => model.fecha_presentacion)
      
                @Html.EditorFor(model => model.fecha_presentacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fecha_presentacion, "", new { @class = "text-danger" })
      
            </div>
        </div>
        <div class="col">
            
            <div class="form-group">
                @Html.LabelFor(model => model.fecha_desde)
        
                @Html.EditorFor(model => model.fecha_desde, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fecha_desde, "", new { @class = "text-danger" })
       
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col">  <div class="form-group">
            @Html.LabelFor(model => model.fecha_hasta)
       
            @Html.EditorFor(model => model.fecha_hasta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.fecha_hasta, "", new { @class = "text-danger" })
        
        </div></div>
        <div class="col">
            <div class="form-group">
                @Html.LabelFor(model => model.estado)

                @Html.DropDownListFor(model => model.estado,
                    new SelectList(Enum.GetValues(typeof(AvanceProcura.EstadoProcura))), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
                
            </div>

        </div>
    </div>

    
    <div class="form-group">
       
            <input type="submit" value="Guardar" class="btn btn-outline-primary" />
            @Html.ActionLink("Cancelar", "Index", "AvanceProcura", new { id = Model.OfertaId }, new { @class = "btn btn-outline-primary" })
       
    </div>
</div>
}

    </div>
</div>
@section Scripts{

}
