@using System.Globalization
@model com.cpp.calypso.web.Areas.Proyecto.Models.OfertaAvanceProcuraViewModel

@{
    ViewBag.Title = "Index";
}


@if (ViewBag.Msg != null)
{
    <div class="alert alert-danger" role="alert">
        <div class="row">
            <div class="col-sm-1" style=" padding-top: 0.4em;">
                <i class="icon-ban icons font-4xl  mt-auto" style="padding-left: 0.6em;"></i>
            </div>
            <div class="col-sm-11">
                @ViewBag.Msg
            </div>
        </div>
    </div>
}
<div class="row">
    <div  style="width: 100%;">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <h4 class="card-title">Registro de Avance de Procura</h4>
                    </div>
                    <div class="col" align="right">
                        @Html.ActionLink("Regresar", "IndexProcura", "AvanceProcura", null, new { @class = "btn btn-outline-primary" })

                    </div>


                </div>
                <hr />

                <div class="row">
                    <div class="col-xs-12 col">

                        <h6><b>Proyecto: </b>@Model.oferta.Proyecto.codigo  -  @Model.oferta.Proyecto.descripcion_proyecto </h6>

                    </div>

                    <div class="col-xs-12 col">
                        <h6><b>Oferta: </b> @Model.oferta.codigo -   @Model.oferta.version -   @Model.oferta.descripcion</h6>
                        <h6><b>Definitiva: </b> @Html.DisplayFor(model => model.oferta.es_final)</h6>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="row">
    <div class="card" style="border: none;width:  100%;">
        <div class="card-body">

            <div class="col" align="right">

                @Html.ActionLink("Nuevo Avance Procura", "Create", "AvanceProcura", new { id = ViewBag.ofertaid }, new { @class = "btn btn-outline-primary" })
              
            </div>

            <hr />

            <table class="table table-bordered table-hover display" id="avances_table" style="font-size: 11px">

                <thead>

                    <tr>
                        <th class="align-middle text-center">Fecha Desde</th>
                        <th class="align-middle text-center">Fecha Hasta</th>
                        <th class="align-middle text-center">Fecha Presentacion</th>
                        <th class="align-middle text-center">Estado</th>
                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.listaavances)
                    {
                        <tr>



                            <td>
                                @Html.DisplayFor(modelItem => item.fecha_desde)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fecha_hasta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fecha_presentacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.estado)
                            </td>
                            <td style="width: 200px;">
                                @Html.ActionLink("Ver", "Details", new { id = item.Id }, new { @class = "btn btn-outline-success btn-sm", style = " float:  left; margin-right: 0.3em;" })
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-info btn-sm", style = " float:  left; margin-right: 0.3em;" })
                                <div style="float: left">
                                    <form action="@Url.Action("Delete", "AvanceProcura", new {id = item.Id})" method="post" class="form-inline" onsubmit="return confirm('Esta seguro de Eliminar este Registro?');">
                                        <input type="submit" value="Eliminar" class="btn btn-outline-danger btn-sm" />
                                    </form>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>

                        <th class="align-middle text-center">fecha</th>
                        <th class="align-middle text-center">fecha d</th>
                        <th class="align-middle text-center">fechahs</th>
                        <th class="align-middle text-center">Estado</th>

                        <th class="align-middle text-center"></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

