@model com.cpp.calypso.proyecto.aplicacion.Dto.TransmitalDetalleDto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Msg != null)
{

    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-xs-12 col-md-8">
            <div class="alert alert-danger" role="alert">
                <div class="row">


                    <div class="col-sm-11 align-middle">
                        @ViewBag.Msg
                    </div>

                </div>
            </div>

        </div>
    </div>
}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-sm-12 col-md-8">

    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Información Adjunto Transmital</h2>

            @using (Html.BeginForm("Edit","TransmitalDetalle",FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.ArchivoId)
                @Html.HiddenFor(model => model.Transmital.codigo_transmital)
                @Html.HiddenFor(model => model.Transmital.dirigido_a)
                @Html.HiddenFor(model => model.Transmital.copia_a)
                @Html.HiddenFor(model => model.Transmital.enviado_por)
                @Html.HiddenFor(model => model.Transmital.version)
                @Html.HiddenFor(model => model.TransmitalId, new { htmlAttributes = new { @class = "form-control" } })



                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(model => model.codigo_detalle)

                            @Html.EditorFor(model => model.codigo_detalle, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                            @Html.ValidationMessageFor(model => model.codigo_detalle, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Transmital.version)

                            @Html.EditorFor(model => model.Transmital.version, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                            @Html.ValidationMessageFor(model => model.Transmital.version, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>





                <div class="form-group">
                    @Html.LabelFor(model => model.descripcion)

                    @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                </div>




                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(model => model.nro_hojas)

                            @Html.EditorFor(model => model.nro_hojas, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nro_hojas, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(model => model.nro_copias)

                            @Html.EditorFor(model => model.nro_copias, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nro_copias, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="checkbox">
                                    @Html.LabelFor(model => model.es_oferta)&nbsp;
                                    @Html.EditorFor(model => model.es_oferta)
                                    @Html.ValidationMessageFor(model => model.es_oferta, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="col">

                    </div>
                </div>

                <div class="form-group">
                    <div class="form-group">
                        Archivo:<br />
                        @if (Model.ArchivoId != null && Model.ArchivoId > 0)
                        {
                            <input type="file" name="UploadedFile" />
                        }
                        else
                        {

                            <input type="file" name="UploadedFile" required="" />
                        }
                    </div>
                </div>
                <div class="form-group">

                    <div class="checkbox">
                        @Html.HiddenFor(model => model.vigente)
                        @Html.ValidationMessageFor(model => model.vigente, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                    @Html.ActionLink("Cancelar", "Details", "TransmitalCabecera", new { id = Model.TransmitalId }, new { @class = "btn btn-outline-primary" })

                </div>
            </div>
            }
        </div>
    </div>
    </div>
</div>