@model com.cpp.calypso.proyecto.aplicacion.Dto.TransmitalDetalleDto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Msg != null)
{

    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-xs-12 col-md-8">
            <div class="alert alert-danger" role="alert">
                <div class="row">


                    <div class="col-sm-11 align-middle">
                        @ViewBag.Msg
                    </div>

                </div>
            </div>

        </div>
    </div>
}



<div class="row">
    <div class="col-md-2"></div>
    <div class="col-sm-12 col-md-8">

        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Nuevo Adjunto Transmittal</h2>


                @using (Html.BeginForm("Create", "TransmitalDetalle", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ArchivoId)

                        <div class="form-group">
                            @Html.HiddenFor(model => model.TransmitalId, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TransmitalId, "", new { @class = "text-danger" })
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    @if (ViewBag.SO > 0)
                                    {
                                        @Html.LabelFor(model => model.codigo_detalle)

                                        @Html.EditorFor(model => model.codigo_detalle, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.codigo_detalle, "", new { @class = "text-danger" })
                                    }
                                    else
                                    {
                                        @Html.LabelFor(model => model.codigo_detalle)

                                        @Html.EditorFor(model => model.codigo_detalle, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                                        @Html.ValidationMessageFor(model => model.codigo_detalle, "", new { @class = "text-danger" })
                                    }


                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    @if (ViewBag.SO > 0)
                                    {
                                        @Html.LabelFor(model => model.version)

                                        @Html.EditorFor(model => model.version, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.version, "", new { @class = "text-danger" })
                                    }
                                    else
                                    {
                                        @Html.LabelFor(model => model.version)

                                        @Html.EditorFor(model => model.version, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                                        

                                        @Html.ValidationMessageFor(model => model.version, "", new { @class = "text-danger" })
                                    }


                                </div>
                            </div>
                        </div>





                        <div class="form-group">
                            @Html.LabelFor(model => model.descripcion)

                            @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                        </div>




                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.nro_hojas)

                                    @Html.EditorFor(model => model.nro_hojas, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.nro_hojas, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.nro_copias)

                                    @Html.EditorFor(model => model.nro_copias, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.nro_copias, "", new { @class = "text-danger" })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <div class="col-md-12">

                                        @if (ViewBag.hayoferta == true)
                                        {
                                            @Html.HiddenFor(model => model.es_oferta)
                                        }
                                        else
                                        {
                                            <div class="checkbox">
                                                @Html.LabelFor(model => model.es_oferta)&nbsp;
                                                @Html.EditorFor(model => model.es_oferta)
                                                @Html.ValidationMessageFor(model => model.es_oferta, "", new { @class = "text-danger" })
                                            </div>

                                        }

                                    </div>
                                </div>

                            </div>
                            <div class="col">

                            </div>
                        </div>
                        <div class="form-group">
                            Archivo:<br />
                            <input type="file" name="UploadedFile" required="" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                            @Html.ActionLink("Cancelar", "Details", "TransmitalCabecera", new { id = Model.TransmitalId }, new { @class = "btn btn-outline-primary" })


                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
