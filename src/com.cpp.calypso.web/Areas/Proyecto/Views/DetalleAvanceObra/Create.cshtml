@model com.cpp.calypso.proyecto.aplicacion.AvanceObraDto

@{
    ViewBag.Title = "Create";
}

<link href="~/Content/css/omega/theme.css" rel="stylesheet" />
<link href="~/Content/css/primereact.min.css" rel="stylesheet" />
<link href="~/Content/css/primeicons.css" rel="stylesheet" />
<link href="~/Content/css/block-ui.css" rel="stylesheet" />
<link href="~/Content/css/time-picker.css" rel="stylesheet" />


<div id="OfertaId" class="@Model.OfertaId"></div>
<div id="Fecha" class="@Model.fecha_presentacion"></div>
<div id="AvanceObraId" class="@Model.Id"></div>


<div class="row">
    <div style="width:  100%;">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <h4 class="card-title">Detalles Avance de Obra</h4>
                    </div>

                    <div class="col" align="right">
                        @Html.ActionLink("Regresar", "Details", "AvanceObra", new { id = Model.Id }, new { @class = " btn btn-outline-primary" })
                        
                    </div>
                    <div>


                    </div>
                </div>
                <hr />

                <div class="row">
                    <div class="col-xs-12 col-md-8">
                        <h6><b>Oferta:</b> @Model.Oferta.codigo</h6>
                        <h6><b>Descripción:</b> @Model.descripcion</h6>

                    </div>

                    <div class="col-xs-12 col-md-3">
                        <h6><b>Alcance:</b> @Model.alcance</h6>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <h6><b>Fecha Presentación:</b> @Html.DisplayFor(model => model.fecha_presentacion)</h6>
                    </div>
                    <div class="col">
                        <h6><b>Fecha Desde:</b> @Html.DisplayFor(model => model.fecha_desde)</h6>
                    </div>
                    <div class="col">
                        <h6><b>Fecha Hasta:</b> @Html.DisplayFor(model => model.fecha_hasta)</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div style="width:  100%;">
        <div class="card">
            <div class="card-body">
                <div id="content"></div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/build/vendors.js"></script>
<script src="~/Scripts/build/create_avance_obra.js"></script>