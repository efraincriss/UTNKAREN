@model com.cpp.calypso.proyecto.aplicacion.DetalleOrdenServicioDto

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-sm-12 col-md-8">

        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Detalle Orden de Servicio</h2>
                <hr />
                
                @using (Html.BeginForm()) 
                {
                    @Html.AntiForgeryToken()
    
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.OrdenServicioId)
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.vigente)

                    <div class="form-group">
                        @Html.LabelFor(model => model.GrupoItemId)

                        @Html.DropDownListFor(model => model.GrupoItemId,
                            new List<SelectListItem>
                            {
                                new SelectListItem {Text = "Ingeniería", Value = "1"},
                                new SelectListItem {Text = "Construcción", Value = "2"},
                                new SelectListItem {Text = "Suministros", Value = "3"},
                            },
                            null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.GrupoItemId, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ProyectoId)
                        @Html.DropDownListFor(model => model.ProyectoId, new SelectList(Model.listaproyectos, "Id", "codigo"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ProyectoId, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.valor_os)

                        @Html.EditorFor(model => model.valor_os, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.valor_os, "", new { @class = "text-danger" })

                    </div>


                    <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                    @Html.ActionLink("Cancelar", "Index", "DetalleOrdenServicio", new { id = Model.OrdenServicioId }, new { @class = "btn btn-outline-primary" })
                </div>
                }
            </div>
        </div>
    </div>
</div>

