                                    <tfoot>
                                        <tr>
                                            <th>Id</th>
                                            <th>Fecha</th>
                                            <th>Usuario</th>
                                            <th>Observaciones</th>
                                            <th></th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>


                            <div class="tab-pane fade show active" id="presupuesto" role="tabpanel" aria-labelledby="presupuesto-tab">
