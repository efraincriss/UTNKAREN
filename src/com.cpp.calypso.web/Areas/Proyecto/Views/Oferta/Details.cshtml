                                                </div>
                                                <div class="row">
                                                    <b>Monto OS Construcción: &nbsp;</b>
                                                    @Html.Raw(String.Format(System.Globalization.CultureInfo.CreateSpecificCulture("es-EC"), "{0:0,0.00}", Convert.ToDecimal(@Model.Cabecera.oSmonto_construccion)))
                                                </div>
