                                                <th style="height: 50px">Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Computo)
                                            {

                                                <tr>
                                                    <td> @Html.DisplayFor(modelItem => item.Item.item_padre)</td>
                                                    <td> @Html.DisplayFor(modelItem => item.nombreitem)</td>
                                                    <td> @Html.DisplayFor(modelItem => item.Item.codigo)</td>
                                                    <td> @Html.DisplayFor(modelItem => item.Item.descripcion)</td>
                                                    <td style="text-align: right">
                                                        @Html.Raw(String.Format(System.Globalization.CultureInfo.CreateSpecificCulture("es-EC"), "{0:0,0.00}", Convert.ToDecimal(@item.precio_unitario)))

                                                    </td>
                                                    <td style="text-align: right">
                                                        @Html.Raw(String.Format(System.Globalization.CultureInfo.CreateSpecificCulture("es-EC"), "{0:0,0.00}", Convert.ToDecimal(@item.cantidad)))

                                                    </td>
                                                    <td style="text-align: right">
                                                        @Html.Raw(String.Format(System.Globalization.CultureInfo.CreateSpecificCulture("es-EC"), "{0:0,0.00}", Convert.ToDecimal(@item.costo_total)))
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>Código Padre</th>
                                                <th>Item Padre</th>
                                                <th>Código Item</th>
                                                <th>Descripción</th>
                                                <th>P.U.</th>
                                                <th>Cantidad</th>
                                                <th>Total</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>

                            <div class="tab-pane" id="avanceobra" role="tabpanel" aria-labelledby="avanceobra-tab">
                                <br />
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover display" style="font-size: 11px;">
                                        <thead>
                                            <tr>
                                                <th>Fecha</th>
                                                <th># Avance Obra</th>
                                                <th># Items en Oferta</th>
                                                <th>Monto Presupuestado</th>
                                                <th># Items No Aprobados</th>
                                                <th>Monto Pendiente No Aprobación</th>
                                                <th>Monto Total</th>
                                                <th>Opciones</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (var item in Model.avanceObra)
                                            {
                                                <tr>
                                                    <td>@Html.DisplayFor(modelItem => item.fecha_presentacion)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.descripcion)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.vItemsOferta)</td>
                                                    <td style="text-align: right">
                                                        @Html.Raw(String.Format(System.Globalization.CultureInfo.CreateSpecificCulture("es-EC"), "{0:0,0.00}", Convert.ToDecimal(@item.vMontoPresupuestado)))
                                                    </td>
                                                    <td>@Html.DisplayFor(modelItem => item.vItemsNoAprobados)</td>
                                                    <td style="text-align: right">
                                                        @Html.Raw(String.Format(System.Globalization.CultureInfo.CreateSpecificCulture("es-EC"), "{0:0,0.00}", Convert.ToDecimal(@item.vMontoPendiente)))
                                                    </td>
                                                    <td style="text-align: right">
                                                        @Html.Raw(String.Format(System.Globalization.CultureInfo.CreateSpecificCulture("es-EC"), "{0:0,0.00}", Convert.ToDecimal(@item.vTotal)))
                                                    </td>

                                                    <td style="">
                                                        @Html.ActionLink("Ver", "Details", "AvanceObra", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-success", style = " float:  left; margin-right: 0.3em;" })
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>

                                        <tfoot>
                                            <tr>
                                                <th>Fecha</th>
                                                <th># Avance Obra</th>
                                                <th># Items en Oferta</th>
                                                <th>Monto Presupuestado</th>
                                                <th># Items No Aprobados</th>
                                                <th>Monto Pendiente No Aprobación</th>
                                                <th>Monto Total</th>
                                                <th>Opciones</th>
                                            </tr>
                                        </tfoot>

                                    </table>
                                </div>
                            </div>

                            <div class="tab-pane" id="so" role="tabpanel" aria-labelledby="so-tab">
                                <div class="row">
                                    <div class="col-sm-10" style="margin:auto">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <div class="row">
                                                    <b>Monto Procura: &nbsp;</b>
