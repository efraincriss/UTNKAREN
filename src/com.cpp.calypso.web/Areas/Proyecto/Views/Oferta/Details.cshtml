@using System.Globalization
@model com.cpp.calypso.proyecto.aplicacion.OfertaDto

@{
    ViewBag.Title = "Details";
}
<link href="~/Content/css/omega/theme.css" rel="stylesheet" />
<link href="~/Content/css/primereact.min.css" rel="stylesheet" />
<link href="~/Content/css/primeicons.css" rel="stylesheet" />
<link href="~/Content/css/block-ui.css" rel="stylesheet" />

<div class="@Model.Id" id="OfertaId"></div>
<div class="Oferta" id="TipoProceso"></div>
<div id="cod_proyecto" class="@Model.Proyecto.codigo" align="left"></div>
<div id="cod_oferta" class="@Model.codigo" align="left"></div>
<div id="estado_oferta" class="@Model.estado_oferta" align="left"></div>

@{
    if ((string)Session["usuario"] != null)
    {
        ViewBag.user = System.Web.HttpContext.Current.Session["usuario"] as String;
    }

    if (Model.es_final)
    {
        <div id="definitiva" class="1"></div>

    }
    else
    {
        <div id="definitiva" class="0"></div>
    }
}
<div id="username" class="@ViewBag.user"></div>
<style>
    .margen {
        margin: 3px;
    }
</style>

<div class="row">
    <div style="width:  100%;">
        <div class="card">
            <div class="card-body">

                <div class="row" align="right">
                    <div class="col">

                        <div class="btn-group" role="group" aria-label="Basic example">
                            @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-sm btn-outline-primary" })
                            <div id="content-clone-wbs" style="display: inline-block;" class="@Model.Id" align="left"></div>
                            @Html.ActionLink("+ Presupuesto", "UpdateVersionPresupuesto", "Oferta", new { idOferta = Model.Id }, new { @class = "btn btn-sm btn-outline-primary" })
                            <div id="content-cambiar-estado" style="display: inline-block;" class="@Model.Id" align="left"></div>

                            <div id="content-inlcuir-observacion" style="display: inline-block;" class="@Model.Id" align="left"></div>
                            @Html.ActionLink("Transmital", "Index", "TransmitalCabecera", new { id = Model.Id }, new { @class = "btn btn-sm btn-outline-indigo" })

                            <div id="content-notificacion" style="display: inline-block;" class="@Model.Id" align="left"></div>
                            @Html.ActionLink("Regresar", "Details", "Requerimiento", new { id = Model.RequerimientoId }, new { @class = "btn btn-sm btn-outline-indigo" })
                        </div>
                    </div>
                </div>
                <hr />
                @if (Session["message"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        Nueva Versión Generada
                    </div>
                    Session["message"] = null;
                }

                @if (ViewBag.msg != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.msg
                    </div>

                }

                <div class="">
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <h6><b>Proyecto:</b> @Html.DisplayFor(model => model.Proyecto.codigo) - @Html.DisplayFor(model => model.Proyecto.descripcion_proyecto)</h6>
                            <h6><b>Oferta:</b>  @Html.DisplayFor(model => model.codigo) - @Html.DisplayFor(model => model.version)</h6>
                        </div>

                        <div class="col-xs-12 col-md-6">

                        </div>
                    </div>
                </div>


                <hr />
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="row">
                                <b>Descripción: &nbsp;</b>
                                @Html.DisplayFor(model => model.descripcion)
                            </div>
                            <div class="row">
                                <b>Estado: &nbsp;</b>
                                @Html.DisplayFor(model => model.nombreEstado)
                            </div>
                            <div class="row">
                                <b>Clase: &nbsp;</b>
                                @Html.DisplayFor(model => model.ClaseId)
                            </div>
                            <br />
                            <br />
                            <div class="row">
                                <b>Fecha Primer Envío: &nbsp;</b>
                                @(Model.fecha_primer_envio.ToString().Equals("") ? "dd/mm/aa" : Model.fecha_primer_envio.GetValueOrDefault().ToString("yy-MM-dd"))
                            </div>
                            <div class="row">
                                <b>Fecha Último Envío: &nbsp;</b>
                                @(Model.fecha_ultimo_envio.ToString().Equals("") ? "dd/mm/aa" : Model.fecha_ultimo_envio.GetValueOrDefault().ToString("yy-MM-dd"))
                            </div>
                            <div class="row">
                                <b>Fecha Última Modificación: &nbsp;</b>
                                @(Model.fecha_ultima_modificacion.ToString().Equals("") ? "dd/mm/aa" : Model.fecha_ultima_modificacion.GetValueOrDefault().ToString("yy-MM-dd"))
                            </div>
                            <div class="row">
                                <b>Fecha de Recepción de Orden de Servicio: &nbsp;</b>
                                @(Model.fecha_recepcion_so.ToString().Equals("") ? "dd/mm/aa" : Model.fecha_recepcion_so.GetValueOrDefault().ToString("yy-MM-dd"))
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="row">
                                <b>Definitiva: &nbsp;</b>
                                <span class="margen">
                                    @(Model.es_final == true ? "Es Definitiva" : "No Definitiva")
                                </span>
                            </div>
                            <div class="row">
                                <b>Service Request: &nbsp;</b>
                                <span class="margen">
                                    @Html.DisplayFor(model => model.service_request)
                                </span>
                            </div>
                            <div class="row">
                                <b>Service Order: &nbsp;</b>
                                <span class="margen">
                                    @Html.DisplayFor(model => model.service_order)
                                </span>
                            </div>
                            <br />
                            <div class="row">
                                <b>Monto Ofertado: &nbsp;</b>
                                @Html.DisplayFor(model => model.monto_ofertado)
                            </div>
                            <div class="row">
                                <b>Monto Total Orden Servicio: &nbsp;</b>
                                @Html.DisplayFor(model => model.monto_ofertado)
                            </div>
                            <div class="row">
                                <b>Monto Aprobado OS: &nbsp;</b>
                                @Html.DisplayFor(model => model.monto_so_aprobado)
                            </div>
                            <div class="row">
                                <b>Monto Pendiente Aprobación: &nbsp;</b>
                                @Html.DisplayFor(model => model.monto_ofertado_pendiente_aprobacion)
                            </div>
                            <div class="row">
                                <b>Monto Certificado Aprobado: &nbsp;</b>
                                @Html.DisplayFor(model => model.monto_certificado_aprobado_acumulado)
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div style="width: 100%;">

