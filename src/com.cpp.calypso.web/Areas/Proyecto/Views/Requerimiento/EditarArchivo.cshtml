@model com.cpp.calypso.proyecto.aplicacion.ArchivosRequerimientoDto


@{
    ViewBag.Title = "Create";
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}
@section page_title {<i class="fa fa-unlock-alt"></i> Actualización de Archivos}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-xs-12 col-md-8">

        @using (Html.BeginForm("EditarArchivo", "Requerimiento", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.RequerimientoId)


            <dl class="dl-horizontal">
                <dt>
                    Nombre Archivo Actual
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Archivo.nombre)
                </dd>


            </dl>
            <div class="form-group">
                Nuevo Archivo:<br />
                <input type="file" name="UploadedFile" required="" accept="file_extension|media_type" data-val-required="Seleccione un Archivo" />
            </div>
            <div class="row">

                <div class="col">

                  
                    <br />
                </div>
                <div class="col">


                </div>
            </div>
            <br />
            <input type="submit" value="Guardar" class="btn btn-outline-primary" onclick="return confirm('Esta seguro de Guardar este Registro?');" />


            @Html.ActionLink("Cancelar", "DetailsArchivos", "Requerimiento", new { id = Model.RequerimientoId }, new { @class = "btn btn-outline-primary" })


        </div>

        }


    </div>
</div>
