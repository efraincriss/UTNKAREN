@model com.cpp.calypso.proyecto.aplicacion.ProyectoObservacionDto

@{
    ViewBag.Title = "Editar Observaciones";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-sm-12 col-md-8">

        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Editar Observaciones</h2>
                <hr />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(model => model.ProyectoId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => model.vigente)
                        @Html.HiddenFor(model => model.FechaObservacion, new { htmlAttributes = new { @class = "form-control" } })

                        <div class="form-group">
                            @Html.LabelFor(model => model.Observacion)
                            @Html.EditorFor(model => model.Observacion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Observacion, "", new { @class = "text-danger" })
                        </div>


                        <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                        @Html.ActionLink("Regresar", "Index", "ProyectoObservacion", new {id=Model.ProyectoId}, new { @class = "btn btn-outline-primary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>



