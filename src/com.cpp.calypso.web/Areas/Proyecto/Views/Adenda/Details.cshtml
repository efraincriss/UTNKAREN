@model com.cpp.calypso.proyecto.aplicacion.AdendaDto
@{
    ViewBag.Title = "Adendas";
}

<div class="row">
    <div style="width:  100%;">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <h2 class="card-title">Detalle Adendas</h2>
                    </div>

                    <div class="col" align="right">
                        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-outline-primary" })
                        @Html.ActionLink("Regresar", "Details", "Contrato", new { id = Model.ContratoId }, new { @class = "btn btn-outline-primary" })
                    </div>
                </div>
                <div>

                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.ContratoId)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Contrato.Codigo)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.codigo)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.codigo)
                            </dd>

                            <dt>
                            @Html.DisplayNameFor(model => model.descripcion)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.descripcion)
                            </dd>

                            

                        </dl>
                    </div>



                </div>
            </div>
        </div>
    </div>
