@model com.cpp.calypso.proyecto.aplicacion.GananciaDto

@{
    ViewBag.Title = "Edit";
}

<div class="row">
<div class="col-md-2"></div>
<div class="col-sm-12 col-md-8">
<div class="card">
<div class="card-body">
<h2 class="card-title">Información Ganancia</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ContratoId)
    <div class="row">
        <div class="col">
            <div class="form-group">
                @Html.LabelFor(model => model.fecha_inicio)
               
                    @Html.EditorFor(model => model.fecha_inicio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fecha_inicio, "", new { @class = "text-danger" })
                
            </div>
        </div> <div class="col">
            <div class="form-group">
                @Html.LabelFor(model => model.fecha_fin)
               
                    @Html.EditorFor(model => model.fecha_fin, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fecha_fin, "", new { @class = "text-danger" })
               
            </div>
        </div>
    </div>
   
        <div class="form-group">
            @Html.LabelFor(model => model.estado_ganacia)
          
            <div class="checkbox">
                @Html.EditorFor(model => model.estado_ganacia)
                @Html.ValidationMessageFor(model => model.estado_ganacia, "", new { @class = "text-danger" })
            </div>
           
        </div>
        
        <div class="form-group">
    
            <div class="checkbox">
                @Html.HiddenFor(model => model.vigente)
                @Html.ValidationMessageFor(model => model.vigente, "", new { @class = "text-danger" })
            </div>
      
        </div>


    <div class="form-group">
       
            <input type="submit" value="Guardar" class="btn btn-primary" />
            @Html.ActionLink("Regresar", "Details", "Ganancia", new { id = Model.Id}, new { @class = " btn btn-outline-primary" })
        
    </div>
</div>
    }
    
    </div>
</div>
</div>
</div>

