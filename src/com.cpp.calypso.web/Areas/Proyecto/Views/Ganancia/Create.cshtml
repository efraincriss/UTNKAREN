@model com.cpp.calypso.proyecto.aplicacion.GananciaDto

@{
    ViewBag.Title = "Create";
}

@section page_title {<i class="fa fa-unlock-alt"></i> Ingresar una Ganancia al Contrato }


@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        <div class="row">
            <div class="col-sm-1" style=" padding-top: 0.4em;">
                <i class="icon-ban icons font-4xl  mt-6" style="padding-left: 0.6em;"></i>
            </div>
            <div class="col-sm-11">
                @ViewBag.Error
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-xs-12 col-md-8">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.vigente)
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ContratoId)
                            @Html.DropDownListFor(model => model.ContratoId, new SelectList(Model.ListaContratos, "Id", "codigo"), "Seleccione Contrato", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ContratoId, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(model => model.estado_ganacia)

                            <div class="checkbox">
                                @Html.EditorFor(model => model.estado_ganacia)
                                @Html.ValidationMessageFor(model => model.estado_ganacia, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>




                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(model => model.fecha_inicio)

                            @Html.EditorFor(model => model.fecha_inicio, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.fecha_inicio, "", new { @class = "text-danger" })

                        </div>
                    </div> <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(model => model.fecha_fin)

                            @Html.EditorFor(model => model.fecha_fin, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>
                </div>




            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    @Html.ActionLink("Regresar", "Index", "Ganancia", new { id = Model.ContratoId }, new { @class = " btn btn-primary" })
                </div>
            </div>

        }


    </div>
</div>
