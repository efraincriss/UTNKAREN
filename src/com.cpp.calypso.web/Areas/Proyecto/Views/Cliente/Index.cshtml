@model List<Cliente>

@{
    ViewBag.Title = "Cliente";
}
@if (ViewBag.Msg != null)
{
    <div class="alert alert-danger" role="alert">
        <div class="row">
            <div class="col-sm-1" style=" padding-top: 0.4em;">
                <i class="icon-ban icons font-4xl  mt-6" style="padding-left: 0.6em;"></i>
            </div>
            <div class="col-sm-11">
                @ViewBag.Msg
            </div>
        </div>
    </div>
}


@section page_title
{
    <h2>Clientes</h2>
}


@section page_toolbar {
    <br />
    <div class="btn-toolbar" role="toolbar">
        <a href='@Url.Action("Create", "Cliente")' class="btn btn-primary pull-right nuc_action_create">
            <i class="fa fa-plus"></i>
            Crear Cliente
        </a>
    </div>
}
    <table class="table table-bordered table-hover display" id="clientes_table">
        <thead>
            <tr>
                <th>Cliente</th>
                <th>Identificación</th>
                <th>Razon Social</th>
                <th>Estado</th>
                <th>Operaciones</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.codigoasignado)</td>
                    <td> @Html.DisplayFor(modelItem => item.identificacion)</td>
                    <td> @Html.DisplayFor(modelItem => item.razon_social)</td>
                    <td> @(item.estado == true ? "Activo" : "Inactivo")</td>
                    <td style=" width:  200px;">

                        @Html.ActionLink("Ver", "Details", new { id = item.Id }, new { @class = "btn btn-outline-success btn-sm", style = " float:  left; margin-right: 0.3em;" })
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-info btn-sm", style = " float:  left; margin-right: 0.3em;" })
                        <div style="float: left">
                            <form action="@Url.Action("Delete","Cliente", new { id = item.Id })" method="post" class="form-inline">
                                <input type="submit" value="Eliminar" class="btn btn-outline-danger btn-sm" onclick="return confirm('Esta seguro de Eliminar este Registro?');" />
                            </form>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Cliente</th>
                <th>Identificación</th>
                <th>Razon Social</th>
                <th>Estado </th>
                <th></th>

            </tr>
        </tfoot>
    </table>
