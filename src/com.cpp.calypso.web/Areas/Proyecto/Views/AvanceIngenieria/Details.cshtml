@using System.Globalization
@model com.cpp.calypso.proyecto.aplicacion.AvanceIngenieriaDto

@{
    ViewBag.Title = "Avance Ingeniería";
}

<link href="~/Content/css/omega/theme.css" rel="stylesheet" />
<link href="~/Content/css/primereact.min.css" rel="stylesheet" />
<link href="~/Content/css/primeicons.css" rel="stylesheet" />
<link href="~/Content/css/block-ui.css" rel="stylesheet" />
<link href="~/Content/css/time-picker.css" rel="stylesheet" />

<div id="AvanceIngenieriaId" class="@Model.Id"></div>
<div id="OfertaId" class="@Model.OfertaId"></div>
<div class="row">
    <div style="width:  100%;">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <h4 class="card-title">Detalles Avance de Ingeniería</h4>
                    </div>

                    <div class="col" align="right">
                        @Html.ActionLink("Regresar", "Index", "AvanceIngenieria", new { id = Model.OfertaId }, new { @class = " btn btn-outline-primary" })
                        @Html.ActionLink("Editar Datos", "Edit", "AvanceIngenieria", new { id = Model.Id }, new { @class = " btn btn-outline-primary" })
                    </div>
                    <div>


                    </div>
                </div>
                <hr />

                <div class="row">
                    <div class="col-xs-12 col-md-8">
                        <h6><b>Proyecto: </b>@Model.Oferta.Proyecto.codigo - @Model.Oferta.Proyecto.descripcion_proyecto</h6>
                        <h6><b>Oferta: </b> @Model.Oferta.codigo</h6>
                        <h6><b>Descripción:</b> @Model.descripcion</h6>

                    </div>

                    <div class="col-xs-12 col-md-3">
                        <!--    <h6><b>Certificado:</b> @Html.DisplayFor(model => model.CertificadoId)</h6>-->
                        <h6><b>Fecha Presentación:</b> @Html.DisplayFor(model => model.fecha_presentacion)</h6>
                        <h6><b>Periodo:</b> @Html.DisplayFor(model => model.fecha_desde)- @Html.DisplayFor(model => model.fecha_hasta) </h6>
                        <h6><b>Monto Ingeniería:</b> @String.Format(CultureInfo.InvariantCulture, "{0:0,0.0}", Model.monto_ingenieria)</h6>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



<div class="row">
    <div style="width:  100%;">
        <div class="card">
            <div class="card-body">
                <div id="content"></div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/build/vendors.js"></script>
<script src="~/Scripts/build/avance_ingenieria.js"></script>