@model com.cpp.calypso.proyecto.aplicacion.GRDto

@{
    ViewBag.Title = "Editar GR";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-sm-12 col-md-8">

        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Editar GR</h2>
                <hr />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.monto_ingenieria)
                    @Html.HiddenFor(model => model.monto_construccion)
                    @Html.HiddenFor(model => model.monto_suministros)
                    @Html.HiddenFor(model => model.monto_total)
                    @Html.HiddenFor(model => model.vigente)
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.ProyectoId)

                   

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                @Html.LabelFor(model => model.fecha_registro)
                                @Html.EditorFor(model => model.fecha_registro, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.fecha_registro, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                @Html.LabelFor(model => model.numero_gr)
                                @Html.EditorFor(model => model.numero_gr, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.numero_gr, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>



                    <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                    @Html.ActionLink("Regresar", "Index", "GR", null, new { @class = "btn btn-outline-primary" })
                </div>
                }
            </div>
        </div>
    </div>
</div>
