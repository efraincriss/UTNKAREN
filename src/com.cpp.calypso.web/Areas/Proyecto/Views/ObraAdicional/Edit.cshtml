@model com.cpp.calypso.proyecto.aplicacion.ObraAdicionalDto

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-sm-12 col-md-8">

        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Obras Adicionales</h2>
                <hr />


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.WbsId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => model.AvanceObraId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => model.ItemId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => model.vigente)

                        <div class="form-group">
                            @Html.LabelFor(model => model.cantidad)

                            @Html.EditorFor(model => model.cantidad, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.cantidad, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.precio_unitario)

                            @Html.EditorFor(model => model.precio_unitario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.precio_unitario, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.costo_total)

                            @Html.EditorFor(model => model.costo_total, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.costo_total, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.precio_base)

                            @Html.EditorFor(model => model.precio_base, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.precio_base, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.precio_incrementado)

                            @Html.EditorFor(model => model.precio_incrementado, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.precio_incrementado, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.precio_ajustado)

                            @Html.EditorFor(model => model.precio_ajustado, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.precio_ajustado, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.tipo_precio)

                            @Html.EditorFor(model => model.tipo_precio, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.tipo_precio, "", new { @class = "text-danger" })

                        </div>



                        <div class="form-group">
                            @Html.LabelFor(model => model.estado)
                        
                            @Html.EditorFor(model => model.estado, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
                        
                        </div>

     

           

               


                        <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                        @Html.ActionLink("Regresar", "Details", "AvanceObra", new { id = Model.AvanceObraId }, new { @class = " btn btn-outline-primary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("form").validate().cancelSubmit = true;
</script>
