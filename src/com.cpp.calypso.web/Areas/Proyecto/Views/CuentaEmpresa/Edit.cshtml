@model com.cpp.calypso.web.Areas.Proyecto.Models.CreateCuentaEmpresaViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-sm-12 col-md-8">

        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Información Cuenta de Empresa</h2>
                <hr />

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.CuentaEmpresaDto.Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.CuentaEmpresaDto.tipo_cuenta)

                            @Html.DropDownListFor(model => model.CuentaEmpresaDto.tipo_cuenta, new List<SelectListItem>
                            {
                                new SelectListItem {Text = "Cuenta de Ahorros", Value = "Ahorros"},
                                new SelectListItem {Text = "Cuenta Corriente", Value = "Corriente"},
                            }, null, new {@class = "form-control"})
                            @Html.ValidationMessageFor(model => model.CuentaEmpresaDto.tipo_cuenta, "", new { @class = "text-danger" })

                        </div>


                        <div class="form-group">
                            @Html.LabelFor(model => model.CuentaEmpresaDto.numero_cuenta)
                            @Html.EditorFor(model => model.CuentaEmpresaDto.numero_cuenta, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CuentaEmpresaDto.numero_cuenta, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    @Html.HiddenFor(model => model.CuentaEmpresaDto.EmpresaId, new { htmlAttributes = new { @class = "form-control" } })

                    @Html.HiddenFor(model => model.CuentaEmpresaDto.vigente)


                    <div class="form-group">
                        @Html.LabelFor(model => model.CuentaEmpresaDto.InstitucionFinancieraId)
                        @Html.DropDownListFor(model => model.CuentaEmpresaDto.InstitucionFinancieraId, new SelectList(Model.InstitucionesFinancieras, "Id", "nombre"), null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CuentaEmpresaDto.InstitucionFinancieraId, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-check">
                        @Html.EditorFor(model => model.CuentaEmpresaDto.estado)
                        @Html.LabelFor(model => model.CuentaEmpresaDto.estado)
                        @Html.ValidationMessageFor(model => model.CuentaEmpresaDto.estado, "", new { @class = "text-danger" })
                    </div>

                    <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                    @Html.ActionLink("Regresar", "Details", "Empresa", new { id = Model.CuentaEmpresaDto.EmpresaId}, new { @class = " btn btn-outline-primary" })
                }

            </div>
        </div>
    </div>
</div>