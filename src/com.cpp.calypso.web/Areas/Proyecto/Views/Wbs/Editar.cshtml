@model com.cpp.calypso.proyecto.aplicacion.WbsDto

@{
    ViewBag.Title = "Editar";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-sm-12 col-md-8">

        <div class="card">
            <div class="card-body">
                <h2 class="card-title">WBS - @Model.nivel_nombre</h2>
                <hr />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.OfertaId)
                    @Html.HiddenFor(model => model.id_nivel_codigo)
                    @Html.HiddenFor(model => model.id_nivel_padre_codigo)
                    @Html.HiddenFor(model => model.estado)
                    @Html.HiddenFor(model => model.es_actividad)
                    @Html.HiddenFor(model => model.vigente)
                    @Html.HiddenFor(model => model.nivel_nombre)



                    <div class="form-group">
                        @Html.LabelFor(model => model.fecha_inicial)

                        @Html.EditorFor(model => model.fecha_inicial, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.fecha_inicial, "", new { @class = "text-danger" })

                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.fecha_final)

                        @Html.EditorFor(model => model.fecha_final, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.fecha_final, "", new { @class = "text-danger" })

                    </div>



                    <div class="form-group">
                        @Html.LabelFor(model => model.observaciones)

                        @Html.EditorFor(model => model.observaciones, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.observaciones, "", new { @class = "text-danger" })

                    </div>


                    <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                    @Html.ActionLink("Regresar", "IndexWbs", "Wbs", new { id = Model.OfertaId }, new { @class = "btn btn-outline-primary" })
                </div>
                }
            </div>
        </div>
    </div>
</div>



