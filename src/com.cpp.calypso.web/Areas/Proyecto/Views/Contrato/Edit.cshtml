                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                @Html.LabelFor(model => model.dias_plazo_pago)

                                @Html.EditorFor(model => model.dias_plazo_pago, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.dias_plazo_pago, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group margen">
                                <div class="checkbox">
                                    @Html.LabelFor(model => model.estado_contrato)&nbsp;
                                    @Html.EditorFor(model => model.estado_contrato)
                                    @Html.ValidationMessageFor(model => model.estado_contrato, "", new { @class = "text-danger" })
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.id_modalidad)

                        @Html.DropDownListFor(model => model.id_modalidad, new List<SelectListItem>
                        {
                            new SelectListItem {Text = "LUMP SUM ", Value = "1", Selected = true},
                            new SelectListItem {Text = "TARIFAS", Value = "2"},
                            new SelectListItem {Text = "PRECIOS UNITARIOS", Value = "3"},
                        }, null, new { @class = "form-control" })


                        @Html.ValidationMessageFor(model => model.id_modalidad, "", new { @class = "text-danger" })

                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                @Html.LabelFor(model => model.sitio_referencia)

                                @Html.EditorFor(model => model.sitio_referencia, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sitio_referencia, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col">
                            @Html.LabelFor(model => model.Formato)

                            @Html.DropDownListFor(model => model.Formato,
                                new SelectList(Enum.GetValues(typeof(com.cpp.calypso.proyecto.dominio.FormatoContrato))),null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Formato, "", new { @class = "text-danger" })

                        </div>
                    </div>


                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-outline-primary" })
                    </div>
                </div>
           }

            </div>
        </div>
    </div>
</div>
