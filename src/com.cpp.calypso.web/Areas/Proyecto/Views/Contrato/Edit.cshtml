                                @Html.ValidationMessageFor(model => model.dias_plazo_factura, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                @Html.LabelFor(model => model.documento_factura_plazo)
                                @Html.EnumDropDownListFor(model => model.documento_factura_plazo, "Seleccione Documento Base Pago", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.documento_factura_plazo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                @Html.LabelFor(model => model.dias_plazo_certificacion_mensual)

                                @Html.EditorFor(model => model.dias_plazo_certificacion_mensual, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.dias_plazo_certificacion_mensual, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                @Html.LabelFor(model => model.dias_garantia_ingenieria)

                                @Html.EditorFor(model => model.dias_garantia_ingenieria, new { htmlAttributes = new { @class = "form-control" } })
