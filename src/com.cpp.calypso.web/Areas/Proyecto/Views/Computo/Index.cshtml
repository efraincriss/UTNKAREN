@model List<Oferta>

@{
    ViewBag.Title = "Cómputos";
}

@section page_title
{
    <h2>Registro de Cómputos</h2>
}
@section page_toolbar {

}
<table class="table table-bordered table-hover display" id="cofertas_table">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Proyecto </th>
            <th>Código Requerimiento</th>
            <th>Código oferta</th>
            <th>Versión</th>
            <th>Fecha Oferta</th>
            <th> Estado</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Requerimiento.Proyecto.Contrato.Cliente.razon_social)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Requerimiento.Proyecto.codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Requerimiento.codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.version)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha_oferta)
                </td>
                <td>
                    @(item.estado == 1 ? "Activo" : "Inactivo")
                </td>
                <td>
                    @Html.ActionLink("Ver", "EstructuraComputos", new { id = item.Id }, new { @class = "btn btn-outline-success  btn-sm", style = " float:  left; margin-right: 0.3em;" })

                    @* @Html.ActionLink("Ver", "Details", new { id = item.Id, pa=0,pd=0 }, new { @class = "btn btn-outline-success  btn-sm", style = " float:  left; margin-right: 0.3em;" })*@
                    <!-- @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-info  btn-sm", style = " float:  left; margin-right: 0.3em;" })
                    <div style="float: left">
                        <form action="@Url.Action("Delete", new {id = item.Id})" method="post" class="form-inline">
                            <input type="submit" value="Eliminar" class="btn btn-outline-danger  btn-sm" />
                        </form>
                    </div>-->

                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Cliente</th>
            <th>Proyecto </th>
            <th>Código Requerimiento</th>
            <th>Código oferta</th>
            <th>Versión</th>
            <th>Fecha Oferta</th>
            <th> Estado</th>
            <th></th>
        </tr>
    </tfoot>
</table>
