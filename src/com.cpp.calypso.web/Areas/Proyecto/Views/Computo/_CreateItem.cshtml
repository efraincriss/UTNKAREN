@model com.cpp.calypso.proyecto.aplicacion.ItemDto
@if (ViewBag.Error != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Error
    </div>
}

        @Html.AntiForgeryToken()
        <h4> Información del Item Adicional</h4>
        <div class="form-horizontal" id="test">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                <div class="col-md-10">
                    @Html.HiddenFor(model => model.codigo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.codigo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.HiddenFor(model => model.item_padre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.item_padre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.nombre)
               
                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
               
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.descripcion)
               
                    @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.HiddenFor(model => model.para_oferta)
                        @Html.ValidationMessageFor(model => model.para_oferta, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        @Html.LabelFor(model => model.UnidadId)
                      
                            @Html.DropDownListFor(model => model.UnidadId, new List<SelectListItem>
                            {
                                new SelectListItem {Text = "Día", Value = "1", Selected = true},
                                new SelectListItem {Text = "Global", Value = "2"},
                                new SelectListItem {Text = "Henrio (eléctrica)", Value = "3"},
                                new SelectListItem {Text = "Hectárea", Value = "4"},
                                new SelectListItem {Text = "Hora Hombre)", Value = "5"},
                                new SelectListItem {Text = "Kilogramo", Value = "6"},
                                new SelectListItem {Text = "Kilometro", Value = "7"},
                                new SelectListItem {Text = "Metro", Value = "8"},
                                new SelectListItem {Text = "Metro Cuadrado", Value = "9"},
                                new SelectListItem {Text = "Metro Cúbico", Value = "10"},
                                new SelectListItem {Text = "metro cúbico / Kilometro", Value = "11"},
                                new SelectListItem {Text = "paquete", Value = "12"},
                                new SelectListItem {Text = "pulgada / metro", Value = "13"},
                                new SelectListItem {Text = "Tonelada", Value = "14"},
                                new SelectListItem {Text = "Unidad", Value = "15"},
                            }, null, new {@class = "form-control"})
                            @Html.ValidationMessageFor(model => model.UnidadId, "", new { @class = "text-danger" })
                       
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        @Html.LabelFor(model => model.GrupoId)
                       
                            @Html.DropDownListFor(model => model.GrupoId, new List<SelectListItem>
                            {
                                new SelectListItem {Text = "Ingenieria", Value = "1", Selected = true},
                                new SelectListItem {Text = "Procura", Value = "2"},
                                new SelectListItem {Text = "Construcción", Value = "3"},

                            }, null, new {@class = "form-control"})
                            @Html.ValidationMessageFor(model => model.GrupoId, "", new { @class = "text-danger" })
                       
                    </div>
                </div>
            </div>
            <div class="form-group">

                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.HiddenFor(model => model.vigente)
                        @Html.ValidationMessageFor(model => model.vigente, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
