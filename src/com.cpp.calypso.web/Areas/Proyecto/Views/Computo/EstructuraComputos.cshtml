@model com.cpp.calypso.web.Models.OfertaComputoViewModel


<div id="OfertaId" class="@Model.Oferta.Id"></div>
<div id="ContratoId" class="@Model.Contrato.Id"></div>
<div id="FechaOfertaId" class="@Model.Oferta.fecha_oferta"></div>

@{
    ViewBag.Title = "Estructura Computos";
}
@section css {
    @Styles.Render("~/Content/bundle_css_react")
    @Styles.Render("~/Content/primereact_")
}
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.Error
                    </div>
                }
                @if (ViewBag.Msg != null)
                {

                    <div class="alert alert-success" role="alert">
                        @ViewBag.Msg
                    </div>
                }
                <div class="row" style="float:right">

                    @Html.ActionLink("Exportar Excel", "ExportarE", "Computo", new { id = Model.Oferta.Id }, new { @class = " btn btn-outline-primary " })
                    @Html.ActionLink("Subir Excel", "SubirExcel", "Computo", new { id = Model.Oferta.Id }, new { @class = " btn btn-outline-primary " })
                    @Html.ActionLink("Regresar", "Details", "Requerimiento", new { id = ViewBag.rId }, new { @class = "btn btn-outline-primary 2" })
                </div>
                <div class="row">


                    <div class="col-sm-4">
                        <h4 class="card-title">COMPUTOS RDO</h4>
                    </div>
                    <div class="col-sm-8">

                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <h6><b>Contrato:</b> @Model.Contrato.Codigo @Model.Contrato.objeto</h6>
                        <h6><b>Proyecto:</b> @Model.Oferta.Proyecto.codigo  - @Model.Oferta.Proyecto.descripcion_proyecto</h6>
                        <h6><b>Oferta:</b> @Model.Oferta.codigo - @Model.Oferta.version - @Model.Oferta.descripcion    </h6>
                        <h6><b>Fecha Oferta:</b> @Model.Oferta.fecha_oferta.GetValueOrDefault().ToString("dd/MM/yyyy")</h6>
                    </div>

                </div>
                <div id="content-computos">

                </div>
            </div>
        </div>
    </div>
    @section scripts {

        <script src="~/Scripts/build/vendors.js"></script>
        <script src="~/Scripts/build/computo_.js"></script>


    }
