@model com.cpp.calypso.proyecto.aplicacion.ListaDistribucionDto

@{
    ViewBag.Title = "Crear lista de distribución";
}

@section page_title
{

    <h2>Lista de Distribución</h2>
    <i class="fa fa-plus-square"></i> Crear lista de distribución
}
@section css {
    @Styles.Render("~/Content/bundle_css_react")
    @Styles.Render("~/Content/bundle_css_react_primereact_v2")
}


<div class="row">
    <div class="col-md-2"></div>
    <div class="col-xs-12 col-md-8">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.vigente)

                <div class="form-group">
                    @Html.LabelFor(model => model.nombre)
                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                </div>

                <div class="form-check">
                    @Html.EditorFor(model => model.estado, new { htmlAttributes = new { @class = "form-check-input" } })
                    @Html.LabelFor(model => model.estado, new { htmlAttributes = new { @class = "form-check-label" } })
                    @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
                </div>



                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                @Html.ActionLink("Regresar", "Index", "ListaDistribucion", new { @class = "btn btn-outline-primary" })
            </div>
        }
    </div>
</div>